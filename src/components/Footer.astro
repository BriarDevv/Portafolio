---
import { ArrowUp, Instagram, Github, Linkedin } from '@lucide/astro';
---

<footer id="site-footer" class="bg-[#111111] pt-14 pb-10">
  <div class="max-w-[1440px] mx-auto px-[120px] max-[1024px]:px-6">
    <!-- Top row -->
    <div class="flex justify-between items-start mb-16 max-[768px]:flex-col max-[768px]:gap-10">
      <!-- Left: Brand -->
      <div id="footer-brand" class="flex flex-col gap-[18px] w-[420px] max-[768px]:w-full">
        <span class="text-[#FAFAF9] font-outfit text-[22px] font-semibold tracking-[-0.6px]">Briar.dev</span>
        <p class="text-[#6E6E68] font-inter text-sm leading-relaxed max-w-[420px]">
          Llevo ideas simples a webs completas, sin perder simpleza.
        </p>
        <div class="inline-flex items-center gap-2 bg-[#171717] border border-[#2A2A2A] rounded-full px-[14px] py-2 self-start">
          <span class="w-[6px] h-[6px] rounded-full bg-[#5EDB96] shrink-0"></span>
          <span class="text-[#AEAEA6] font-inter text-xs font-medium">Disponible para nuevos proyectos</span>
        </div>
      </div>

      <!-- Right: Columns -->
      <div id="footer-links" class="flex gap-[72px] max-[768px]:gap-10">
        <!-- Navigation -->
        <div class="flex flex-col gap-[14px]">
          <span class="text-[#D7D7D0] font-inter text-xs font-bold tracking-[1.2px] uppercase">Navegación</span>
          <ul class="flex flex-col gap-[10px]">
            {[
              { href: '/', label: 'Inicio' },
              { href: '/proyectos', label: 'Proyectos' },
              { href: '/sobre-mi', label: 'Sobre mi' },
              { href: '/contacto', label: 'Contacto' },
            ].map((item) => (
              <li>
                <a
                  href={item.href}
                  class="flex items-center gap-2 text-[#8A8A82] font-inter text-[13px] font-medium hover:text-[#FAFAF9] transition-colors"
                >
                  <span class="w-1 h-1 rounded-full bg-[#3A3A3A] shrink-0"></span>
                  {item.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Social -->
        <div class="flex flex-col gap-[14px]">
          <span class="text-[#D7D7D0] font-inter text-xs font-bold tracking-[1.2px] uppercase">Redes</span>
          <div class="flex items-center gap-2 bg-[#131313] border border-[#2A2A2A] rounded-full px-2 py-[6px]">
            <!-- X/Twitter -->
            <a href="#" aria-label="X / Twitter" class="w-[30px] h-[30px] rounded-full bg-[#171717] border border-[#2A2A2A] flex items-center justify-center hover:border-[#555] transition-colors">
              <svg width="13" height="13" viewBox="0 0 24 24" fill="#AEAEA6">
                <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-4.714-6.231-5.401 6.231H2.744l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
              </svg>
            </a>
            <!-- Instagram -->
            <a href="#" aria-label="Instagram" class="w-[30px] h-[30px] rounded-full bg-[#171717] border border-[#2A2A2A] flex items-center justify-center hover:border-[#555] transition-colors">
              <Instagram size={13} color="#AEAEA6" />
            </a>
            <!-- GitHub -->
            <a href="#" aria-label="GitHub" class="w-[30px] h-[30px] rounded-full bg-[#171717] border border-[#2A2A2A] flex items-center justify-center hover:border-[#555] transition-colors">
              <Github size={13} color="#AEAEA6" />
            </a>
            <!-- LinkedIn -->
            <a href="#" aria-label="LinkedIn" class="w-[30px] h-[30px] rounded-full bg-[#171717] border border-[#2A2A2A] flex items-center justify-center hover:border-[#555] transition-colors">
              <Linkedin size={13} color="#AEAEA6" />
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="h-px bg-[#202020] mb-6"></div>

    <!-- Bottom -->
    <div id="footer-bottom" class="flex items-center justify-between max-[640px]:flex-col max-[640px]:gap-3 max-[640px]:items-start">
      <span class="text-[#4A4A48] font-inter text-xs">
        © 2026 Briar.dev · Diseñado y desarrollado por Mateo.
      </span>
      <button
        onclick="window.scrollTo({ top: 0, behavior: 'smooth' })"
        class="flex items-center gap-2 text-[#6E6E68] font-inter text-xs hover:text-[#AEAEA6] transition-colors"
      >
        Volver arriba
        <ArrowUp size={12} />
      </button>
    </div>
  </div>
</footer>

<script>
  import gsap from 'gsap';
  import ScrollTrigger from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: '#site-footer',
      start: 'top 90%',
      once: true,
    },
  });

  tl.fromTo(
    '#footer-brand',
    { opacity: 0, y: 28 },
    { opacity: 1, y: 0, duration: 0.65, ease: 'power2.out' }
  )
  .fromTo(
    '#footer-links',
    { opacity: 0, y: 28 },
    { opacity: 1, y: 0, duration: 0.65, ease: 'power2.out' },
    '-=0.45'
  )
  .fromTo(
    '#footer-bottom',
    { opacity: 0, y: 12 },
    { opacity: 1, y: 0, duration: 0.5, ease: 'power2.out' },
    '-=0.2'
  );
</script>
