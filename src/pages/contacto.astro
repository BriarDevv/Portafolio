---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import MobileMenu from '../components/MobileMenu.astro';
import Footer from '../components/Footer.astro';

const faqs = [
  { q: '¿Cuánto tiempo tarda un proyecto típico?' },
  { q: '¿Qué necesitás para arrancar el proyecto?' },
  { q: '¿Cuál es tu proceso de trabajo?' },
  { q: '¿Ofrecés soporte después del lanzamiento?' },
  { q: '¿Trabajas con clientes internacionales?' },
];
---

<Layout title="Contacto — Briar.dev">
  <MobileMenu />
  <Navbar />

  <!-- ─── CONTACT HERO ─── -->
  <section class="bg-[#FAFAF9] max-w-[1440px] mx-auto pt-[88px] pb-[75px] px-[120px] max-[1024px]:px-6 max-[640px]:pt-16 max-[640px]:pb-10 max-[640px]:px-6">
    <div class="flex flex-col gap-6 max-[640px]:gap-4">
      <span class="font-inter text-[13px] font-medium text-[#AEAEA6] tracking-[2px] max-[640px]:text-[11px] max-[640px]:tracking-[1.5px]">Contacto</span>
      <h1
        id="page-title"
        class="font-outfit text-[72px] font-light text-[#1A1A1A] tracking-[-3px] leading-[1.15] max-[1024px]:text-[56px] max-[640px]:text-[44px] max-[640px]:tracking-[-1.6px]"
      >
        Hablemos.
      </h1>
      <p class="font-inter text-lg text-[#8A8A82] font-normal leading-[1.6] max-w-[703px] max-[640px]:text-[15px]">
        ¿Tienes un proyecto en mente? Contame la idea y te respondo en menos de 24 hs.
      </p>
    </div>
  </section>

  <!-- ─── CONTACT BODY ─── -->
  <section class="bg-[#FAFAF9] max-w-[1440px] mx-auto px-[120px] pb-14 max-[1024px]:px-6 max-[640px]:px-6 reveal">
    <div class="flex flex-col items-center gap-8 max-w-[900px]">
      <!-- Contact Form (light) -->
      <div class="bg-[#F5F4F0] border border-[#E8E5E0] rounded-[16px] p-6 w-full flex flex-col gap-6">
        <div class="grid grid-cols-2 gap-6 max-[640px]:grid-cols-1">
          <div class="flex flex-col gap-2">
            <label class="font-inter text-[13px] font-medium text-[#71716B]">Nombre</label>
            <div class="bg-white border border-[#E0DDD8] rounded-[10px] h-12 px-4 flex items-center">
              <input type="text" placeholder="Tu nombre" class="w-full font-inter text-sm text-[#1A1A1A] placeholder-[#AEAEA6] outline-none bg-transparent" />
            </div>
          </div>
          <div class="flex flex-col gap-2">
            <label class="font-inter text-[13px] font-medium text-[#71716B]">Email</label>
            <div class="bg-white border border-[#E0DDD8] rounded-[10px] h-12 px-4 flex items-center">
              <input type="email" placeholder="tu@email.com" class="w-full font-inter text-sm text-[#1A1A1A] placeholder-[#AEAEA6] outline-none bg-transparent" />
            </div>
          </div>
        </div>

        <div class="flex flex-col gap-2">
          <label class="font-inter text-[13px] font-medium text-[#71716B]">¿Qué necesitás?</label>
          <div class="bg-white border border-[#E0DDD8] rounded-[10px] h-12 px-4 flex items-center justify-between cursor-pointer">
            <span class="font-inter text-sm text-[#AEAEA6]">Seleccioná una opción</span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#AEAEA6" stroke-width="2" stroke-linecap="round">
              <polyline points="6 9 12 15 18 9"/>
            </svg>
          </div>
        </div>

        <div class="flex flex-col gap-2">
          <label class="font-inter text-[13px] font-medium text-[#71716B]">Detalles del proyecto</label>
          <div class="bg-white border border-[#E0DDD8] rounded-[10px] h-[140px] p-4">
            <textarea placeholder="Cuéntame sobre tu proyecto..." class="w-full h-full font-inter text-sm text-[#1A1A1A] placeholder-[#AEAEA6] outline-none resize-none bg-transparent"></textarea>
          </div>
        </div>

        <button class="w-full bg-[#1A1A1A] text-[#FAFAF9] font-inter text-[15px] font-medium h-[52px] rounded-[12px] flex items-center justify-center gap-[10px] hover:opacity-80 transition-opacity">
          Enviar mensaje
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </button>
      </div>

      <!-- Contact Info -->
      <div class="grid grid-cols-4 gap-5 w-full border-t border-[#E8E5E0] pt-5 max-[900px]:grid-cols-2 max-[640px]:grid-cols-1">
        <div class="flex flex-col gap-[10px]">
          <span class="font-outfit text-base font-semibold text-[#1A1A1A] tracking-[-0.3px]">Escribime</span>
          <a href="mailto:hola@mateo.dev" class="font-inter text-[15px] text-[#8A8A82] hover:text-[#1A1A1A] transition-colors">hola@mateo.dev</a>
        </div>
        <div class="flex flex-col gap-[10px]">
          <span class="font-outfit text-base font-semibold text-[#1A1A1A] tracking-[-0.3px]">Llamame</span>
          <a href="tel:+1158399708" class="font-inter text-[15px] text-[#8A8A82] hover:text-[#1A1A1A] transition-colors">+11 5839 9708</a>
        </div>
        <div class="flex flex-col gap-[10px]">
          <span class="font-outfit text-base font-semibold text-[#1A1A1A] tracking-[-0.3px]">Encontrame en</span>
          <p class="font-inter text-[15px] text-[#8A8A82] leading-[1.6]">Buenos Aires, Argentina<br />Disponible en remoto globalmente</p>
        </div>
        <div class="flex flex-col gap-[14px]">
          <span class="font-outfit text-base font-semibold text-[#1A1A1A] tracking-[-0.3px]">Seguime</span>
          <div class="flex gap-2">
            <!-- X/Twitter -->
            <a href="#" class="w-[30px] h-[30px] rounded-full bg-white border border-[#E0DDD8] flex items-center justify-center hover:border-[#1A1A1A] transition-colors">
              <svg width="13" height="13" viewBox="0 0 24 24" fill="#4A4A48"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-4.714-6.231-5.401 6.231H2.744l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
            </a>
            <!-- LinkedIn -->
            <a href="#" class="w-[30px] h-[30px] rounded-full bg-white border border-[#E0DDD8] flex items-center justify-center hover:border-[#1A1A1A] transition-colors">
              <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="#4A4A48" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect x="2" y="9" width="4" height="12"/><circle cx="4" cy="4" r="2"/></svg>
            </a>
            <!-- Instagram -->
            <a href="#" class="w-[30px] h-[30px] rounded-full bg-white border border-[#E0DDD8] flex items-center justify-center hover:border-[#1A1A1A] transition-colors">
              <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="#4A4A48" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5"/><circle cx="12" cy="12" r="4"/><circle cx="17.5" cy="6.5" r="1" fill="#4A4A48" stroke="none"/></svg>
            </a>
            <!-- GitHub -->
            <a href="#" class="w-[30px] h-[30px] rounded-full bg-white border border-[#E0DDD8] flex items-center justify-center hover:border-[#1A1A1A] transition-colors">
              <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="#4A4A48" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"/></svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- ─── FAQ SECTION ─── -->
  <section class="bg-[#FAFAF9] max-w-[1440px] mx-auto px-[120px] py-20 border-t border-[#E8E5E0] max-[1024px]:px-6 max-[640px]:px-6 max-[640px]:py-14 reveal">
    <div class="flex flex-col gap-12 max-w-[900px]">
      <!-- Header -->
      <div class="flex flex-col gap-4">
        <span class="font-inter text-[13px] font-medium text-[#AEAEA6] tracking-[2px]">Preguntas frecuentes</span>
        <h2 class="font-outfit text-[36px] font-light text-[#1A1A1A] tracking-[-1px] leading-tight max-[640px]:text-[28px]">
          Lo que suelen preguntar
        </h2>
      </div>

      <!-- FAQ list -->
      <div class="flex flex-col" id="faq-list">
        {faqs.map((faq, i) => (
          <div class="faq-item border-t border-[#E8E5E0] py-6 flex items-center justify-between cursor-pointer group" data-index={i}>
            <span class="font-inter text-base font-medium text-[#1A1A1A] max-[640px]:text-[15px] pr-4">
              {faq.q}
            </span>
            <svg
              class="faq-icon shrink-0 transition-transform duration-300"
              width="18"
              height="18"
              viewBox="0 0 24 24"
              fill="none"
              stroke="#AEAEA6"
              stroke-width="2"
              stroke-linecap="round"
            >
              <line x1="12" y1="5" x2="12" y2="19"/>
              <line x1="5" y1="12" x2="19" y2="12"/>
            </svg>
          </div>
        ))}
      </div>
    </div>
  </section>

  <Footer />
</Layout>

<script>
  import gsap from 'gsap';
  import ScrollTrigger from 'gsap/ScrollTrigger';

  gsap.registerPlugin(ScrollTrigger);

  gsap.fromTo(
    '#page-title',
    { opacity: 0, y: 30 },
    { opacity: 1, y: 0, duration: 0.8, ease: 'power3.out', delay: 0.3 }
  );

  // FAQ accordion toggle
  const faqItems = document.querySelectorAll('.faq-item');
  faqItems.forEach((item) => {
    item.addEventListener('click', () => {
      const icon = item.querySelector('.faq-icon') as SVGElement;
      const isActive = item.classList.contains('active');
      // Close all
      faqItems.forEach((fi) => {
        fi.classList.remove('active');
        const ic = fi.querySelector('.faq-icon') as SVGElement;
        if (ic) gsap.to(ic, { rotation: 0, duration: 0.2 });
      });
      // Open clicked if not active
      if (!isActive) {
        item.classList.add('active');
        if (icon) gsap.to(icon, { rotation: 45, duration: 0.2 });
      }
    });
  });

  gsap.utils.toArray<HTMLElement>('.reveal').forEach((el) => {
    gsap.fromTo(
      el,
      { opacity: 0, y: 32 },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: 'power2.out',
        scrollTrigger: {
          trigger: el,
          start: 'top 85%',
          once: true,
        },
      }
    );
  });
</script>
